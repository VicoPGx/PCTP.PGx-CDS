    <script src="@Url.Content("~/Content/scripts/jquery.dd.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/UtilityDef.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/jquery.dataTables.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Content/scripts/jquery.form.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Content/scripts/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/jquery.steps.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/jquery.validate.js")" type="text/javascript"></script>
