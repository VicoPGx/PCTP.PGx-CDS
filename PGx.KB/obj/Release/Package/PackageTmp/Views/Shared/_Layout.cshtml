    <link href="../../Content/styles/jquery.multiselect.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/spin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Conent/scripts/bootstrap-3.3.7.min.js")"type="text/javascript"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/bootstrap-3.3.7.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/navbar-fixed-top.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/dd.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.dataTables.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/lightbox.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/pagination.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/jquery.steps.css")" rel="stylesheet" type="text/css" />

    <style>
        fieldset {
            padding: .35em .625em .75em;
            margin: 0 2px;
            border: 1px solid silver;
        }

        legend {
            padding: .5em;
            border: 0;
            width: auto;
            font-size: 18px;
            margin-bottom: 0px;
        }

        #the_nav a {
            text-decoration: none;
        }
    </style>
    <script type="text/javascript">

        $(document).ready(function () {
            var urlstr = location.href;　　　　//获取浏览器的url
            var urlstatus = false;　　　　　　　　//标记
            //遍历导航div
            $("#navbar ul:first>li").each(function () {
                //判断导航里面的rel和url地址是否相等
                var aa = $(this).find('a:eq(0)').attr("href");
                var boolA = (urlstr).indexOf(aa);
                if (boolA > 0) {
                    $(this).addClass('active'); urlstatus = true;
                } else {
                    $(this).removeClass('active');
                }
            });
            //当前样式保持
            if (!urlstatus) { $("#navbar>ul>li").eq(0).addClass('cur'); };

        });
    </script>
</head>
<body style="padding-top: 55px;">
    <nav id="the_nav" class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color: #bce8f1">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand no" href="/Home/Index">PGx Clinical Translation Platform</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse ">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Genomic Data", "GenomicRM", "Processing")</li>
                    <li>@Html.ActionLink("Genomic Knowledge", "GenomicKM", "PGxKnowledgeBase")</li>
                    <li>@Html.ActionLink("Therapeutic Knowledge", "TherapeuticKM", "PGxKnowledgeBase")</li>
                    <li>@Html.ActionLink("Application Demo", "ApplicationDemo", "ApplicationInEhrDemo")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li><a class="no_line" href="#"><span class="glyphicon glyphicon-user"></span>@User.Identity.Name</a></li>
                        <li><a href="/Account/LogOff" class="no_line"><span class="glyphicon glyphicon-log-out"></span>[Log Out]</a></li>
                    }
                    else
                    {
                        <li><a href="#" class="no_line"><span class="glyphicon glyphicon-user"></span>Not logged in</a></li>
                        <li><a href="/Account/Login" class="no_line"><span class="glyphicon glyphicon-log-in"></span>[Log In]</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="body-content" style="margin-left: 1em; margin-right: 1em">

        @RenderBody()

        <div style="clear: both">
            <br />
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - @Resource.ZJU</p>
            </footer>
        </div>
    </div>
</body>
</html>

