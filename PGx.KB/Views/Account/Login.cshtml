@model PGx.KB.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-sm-6 col-md-6">
        <div class="thumbnail">
            <img src="/Content/images/first/lanjie1.jpg" style="width: 700px; height: 400px" />
        </div>
    </div>
    <div class="col-sm-6 col-md-6">
        <div class="page-header">
            <h1>Log In</h1>
            <small>Please enter your user name <em>(admin)</em> and password <em>(secret)</em> to log in.</small>
        </div>
        <fieldset>
            <legend style="margin: 30px">Account</legend>
            @using (Html.BeginForm())
            {  
                @Html.ValidationSummary(true)
                <label>User name</label> <span>(admin)</span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "width:60%" })
                @Html.ValidationSummary(true)
                <label>Password</label> <span>(secret)</span>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", style = "width:60%", type = "password" })
                <br />
                <button type="submit" class="btn btn-default">Log in</button>
            }
        </fieldset>
    </div>

</div>
